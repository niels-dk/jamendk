# /.htaccess (root)
Options -Multiviews
RewriteEngine On
RewriteBase /

# 1) Let Apache serve any real file or directory directly.
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2) If someone hits /index.php directly, bounce them to /
RewriteRule ^index\.php$ / [L,R=302]

# 3) Everything else goes through index.php (front controller)
RewriteRule . index.php [QSA,L]

# PHP limits (your originals)
php_value upload_max_filesize 64M
php_value post_max_size 64M
